<Window x:Class="Lab1View.InputFilename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1View"
        mc:Ignorable="d"
        Title="InputFilename" ResizeMode="NoResize" Height="150" Width="400">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Input value of key:" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0"></TextBlock>
        <TextBox x:Name="KeyValueTextBox"  Text="0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="250" FontSize="22" KeyDown="KeyValueTextBox_KeyDown" ></TextBox>
        
    </Grid>
    
</Window>
